<body>

<div id="player"></div>
<div class="obstacle"></div>

<script>
let player = document.getElementById("player");
document.addEventListener("touchstart", jump);
document.addEventListener("keydown", jump);

function jump() {
  player.style.bottom = "120px";
  setTimeout(() => {
    player.style.bottom = "20px";
  }, 500);
}
</script>

